<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/planet_earth_in_space" >

    <ImageView
			android:id="@+id/operators"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:contentDescription="operators"
			android:padding="1dp"
			android:src="@drawable/introsign" />
    
    
    <TextView
			android:id="@+id/intro"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/operators"
			android:layout_centerHorizontal="true"
			android:padding="20dp"
			android:text="@string/app_name"
			android:textColor="#ffffff"
			android:textSize="20sp"
			android:textStyle="bold" />

    <TextView
			android:id="@+id/high_scores_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/intro"
			android:layout_centerHorizontal="true"
			android:padding="10dp"
			android:text="HIGH SCORES"
			android:textColor="#ffffff"
			android:textSize="20sp"
			android:textStyle="bold" />
	
	<Button
        android:id="@+id/kinderLearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/high_scores_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#25000000"
        android:text="KinderLearn Level"
        android:textColor="#ffffff" 
        android:textSize="20sp"
		android:textStyle="bold"/>
	
		<Button
        android:id="@+id/firstGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kinderLearn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#25000000"
        android:text="Grade 1"
        android:textColor="#ffffff" 
        android:textSize="20sp"
		android:textStyle="bold"/>
		
			<Button
        android:id="@+id/secondGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstGrade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#25000000"
        android:text="Progress Tracking"
        android:textColor="#ffffff" 
        android:textSize="20sp"
		android:textStyle="bold"/>
			
   </RelativeLayout>
